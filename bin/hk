#! /usr/bin/env node
// 为了方便测试
//enter
const chalk = require("chalk");
var figlet = require("figlet");

console.log(`${chalk.blue("hk-cli")} hello word` );

const program = require('commander')

program.name("hk-cli").usage(`<command> [option]`);

//  
// program.version(require('../package').version)





// 版本指令
// program.version(`hk-cli ${require("../package.json").version}`);

// 监听 --help 指令
// 使用 cyan 颜色
// program.on("--help", function () {
//   // 前后两个空行调整格式，更舒适
//   console.log();
//   console.log(
//     `Run ${chalk.cyan(
//       "hk-cli <command> --help"
//     )} for detailed usage of given command.`
//   );
//   console.log();
// });

program
  // 定义命令和参数
  .command(`create <project-name>`)
  .description('create a new project')
  // -f or --force 为强制创建，如果创建的目录存在则直接覆盖
  .option('-f, --force', 'overwrite target directory if it exist')
  .action((name, options) => {
    // 打印执行结果
    // console.log('project-name:',name,'options:',options)
    require('../lib/create.js')(name, options)
  })
  
program
   // 配置版本号信息
  .version(`v${require('../package.json').version}`)
  .usage('<command> [option]')


// bin/cli.js

program
  .on('--help', () => {
    // 使用 figlet 绘制 Logo
    console.log('\r\n' + figlet.textSync('SKY', {
      font: 'Ghost',
      horizontalLayout: 'default',
      verticalLayout: 'default',
      width: 80,
      whitespaceBreak: true
    }));
    // 新增说明信息
    console.log(`\r\nRun ${chalk.cyan(`HKCLI <command> --help`)} show details\r\n`)
  })


// 解析用户执行命令传入参数
program.parse(process.argv)